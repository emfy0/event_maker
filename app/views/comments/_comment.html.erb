<div class="buffer-bottom card p-2 rounded">
  <p class="bg-light rounded"><%= comment.body %></p>
  <p class="bg-light rounded">
    <span>
      <% if comment.user.present? %>
        <%= render partial: 'users/user', object: comment.user %>
      <% else %>
        <em><strong><%= comment.user_name %></strong></em>
      <% end %>
    </span>
    <em><%= l comment.created_at, format: :short %></em>
    <% if current_user_can_edit?(comment) %>
        <%=  link_to bi_icon('trash'), event_comment_path(comment.event, comment),
              data: { turbo_method: :delete, turbo_confirm: t('are_you_sure') } %>
    <% end %>
  </p>
</div>

