<h2>Регистрация</h2>
<div class="col-md-4">

  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false }}) do |f| %>

  <div class="field">
    <b>
    <%= f.label :email %>
    </b>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>
  </div>

  <div class="field">
    <b>
    <%= f.label :name %>
    </b>
    <%= f.text_field :name, autocomplete: "name", class: 'form-control' %>
  </div>

  <div class="field">
    <b>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> символов минимум)</em>
    <% end %>
    </b>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true %>
  </div>

  <div class="field">
    <b>
    <%= f.label :password_confirmation %><br />
    </b>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистрироваться", class: 'btn btn-primary mt-2 mb-1' %>
  </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

