<h2><%= t '.change_my_password' %></h2>
<div class="col-md-4">
<%= form_for(resource, as: resource_name, url: password_path(resource_name),  html: { method: :put, data: { turbo: false } }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <b><%= f.label :password, t('.change_your_password') %></b>
    <% if @minimum_password_length %>
      <em><%= t 'devise.shared.minimum_password_length', count: @minimum_password_length %></em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="field">
    <b><%= f.label :password_confirmation, t('.confirm_new_password') %></b>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit t('.change_my_password'), class: 'btn btn-primary mt-2 mb-1' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
