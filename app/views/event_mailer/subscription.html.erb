<h1><%= t '.title' %></h1>
<p><%= t '.name' %>: <strong><%= @name %></strong></p>
<p><%= t '.email' %>: <strong><%= mail_to @email %></strong></p>
<hr/>

<%= t '.event' %>

<h3><%= link_to @event.title, event_url(@event) %></h3>

<%= time_phrase(@event.datetime) %>
<h4><%= l @event.datetime, format: :short %></h4>

<%= t '.owner' %>
<h4><%= @event.user.name %></h4>
