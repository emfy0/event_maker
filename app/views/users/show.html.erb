<div class="text-center">
  <h1><%= @user.name %></h1>

  <span class="user-avatar">
    <%= image_tag(user_avatar(@user), class: 'img-icon') %>
  </span>

  <% if @user == current_user %>
    <p class="buffer-top">
    <%= link_to t('user.editing'), edit_user_path(@user),
      class: 'btn btn-outline-dark' %>
    </p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t 'user.organaized' %></h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= t 'user.no_events' %></p>
      <% end %>
    </div>
  </div>
</div>
