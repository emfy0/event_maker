<%= form_for [@event, photo], html: { multipart: true, data: { turbo: false } } do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: photo } %>

  <div class="form-group mb-2">
    <b><%= f.label :photo, class: 'form-label' %></b>
    <%= f.file_field :photo, class: 'form-control'%>
  </div>

  <div class="actions">
    <%= f.submit 'Загрузить', class: 'btn btn-primary' %>
  </div>
<% end %>
