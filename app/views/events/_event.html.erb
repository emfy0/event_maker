<div class="col-sm-6 col-md-4">
  <div class="thumbnail">

    <%= content_tag 'div', '', class: 'event-background',
      style: "background-image: url(#{event_photo(event)})" %>

    <div class="thumbnail-inner event-info-inner text-center">
      <div class="caption">
        <div class="event-description">
          <h3><%= link_to event.title, event_path(event), data: { turbo: false } %></h3>
          <h3><small><%= l(event.datetime, format: :short) %></small></h3>
          <div class="buffer-both"><%= event.address %></div>
        </div>
        
        <div>
          <% event.visitors.each do |user| %>
            <%= link_to image_tag(user_avatar(user), class: 'img-icon', title: user.name), user_path(user) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
